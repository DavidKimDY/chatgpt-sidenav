{
  "manifest_version": 3,
  "name": "ChatGPT 질문 사이드바",
  "version": "1.0.0",
  "description": "ChatGPT 대화에서 질문들을 사이드바로 확인하고 클릭하여 이동",
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://chatgpt.com/c/*",
        "https://*.openai.com/*"
      ],
      "js": ["content.js"],
      "css": ["sidebar.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://*.openai.com/*"
  ]
}
