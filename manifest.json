{
  "manifest_version": 3,
  "name": "ChatGPT Question Sidebar",
  "version": "1.0.0",
  "description": "Display all your ChatGPT questions in a convenient sidebar. Click any question to smoothly scroll to it.",
  "icons": {
    "16": "icons/sidenav-logo.png",
    "48": "icons/sidenav-logo.png",
    "128": "icons/sidenav-logo.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/sidenav-logo.png",
      "48": "icons/sidenav-logo.png",
      "128": "icons/sidenav-logo.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://chatgpt.com/c/*",
        "https://*.openai.com/*"
      ],
      "js": ["content.js"],
      "css": ["sidebar.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://*.openai.com/*"
  ]
}
